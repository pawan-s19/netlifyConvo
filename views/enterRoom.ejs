<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/enterRoom.css" />
    <title>Convo</title>
  </head>
  <body>
    <% const d = new Date()%>
    <div class="main">
      <div id="shape1" class="shape"></div>
      <div id="shape2" class="shape"></div>
      <div class="glass">
        <form action="anonymousChat" id="form">
          <div class="head">
            <img src="/images/circle-chartnew.webp" alt="" />
            <h3>Convo</h3>
          </div>
          <label for="username">Username</label>
          <input
            autocomplete="off"
            name="uname"
            id="name"
            type="text"
            placeholder="Name"
          />
          <label for="Rooms">Rooms</label>
          <select name="room" id="select" aria-label="Default select example">
            <option selected value="Friends">Friends</option>
            <option value="Cricket">Cricket</option>
            <option value="Music">Music</option>
            <option value="Football">Football</option>
            <option value="Bollywood">Bollywood Masala</option>
            <option value="Politics">News & Politics</option>
            <option value="Gaming">Gaming</option>
            <option value="PUBG">PUBG Lovers</option>
            <option value="Stock">Stock Market</option>
            <option value="Crypto">CryptoCurrency</option>
            <option value="Travel">Travel & Events</option>
            <option value="Tech">Science & Technology</option>
            <option value="Education">Education</option>
            <option value="Pets">Pets & Animals</option>
            <option value="Entertainment">Entertainment</option>
          </select>
          <div id="btnCtn">
            <button id="valBtn" class="btn-home">Enter Chat Room</button>
          </div>
          <a href="/" class="cta">
            <span>Click me</span>
            <svg width="13px" height="10px" viewBox="0 0 13 10">
              <path d="M1,5 L11,5"></path>
              <polyline points="8 1 12 5 8 9"></polyline>
            </svg>
            <i class="ri-home-3-fill"></i>
          </a>
        </form>
      </div>
      <!-- This is toast -->
      <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div
          id="liveToast"
          class="toast"
          role="alert"
          aria-live="assertive"
          aria-atomic="true"
        >
          <div class="toast-header">
            <img src="" class="rounded me-2" alt="" />
            <strong class="me-auto">Convo Group Chat</strong>
            <small id="toastTime"> </small>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="toast"
              aria-label="Close"
            ></button>
          </div>
          <div class="toast-body">
            Please, enter a 'fake' name if you don't want to reveal your
            identity
          </div>
        </div>
      </div>
    </div>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/qs/6.9.4/qs.min.js"
      integrity="sha512-BHtomM5XDcUy7tDNcrcX1Eh0RogdWiMdXl3wJcKB3PFekXb3l5aDzymaTher61u6vEZySnoC/SAj2Y/p918Y3w=="
      crossorigin="anonymous"
    ></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/javascripts/enterRoom.js"></script>
  </body>
</html>
